<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.scottquach.racetracker.ScoreTracker"
    android:background="@drawable/background_gradient"
    android:id="@+id/activity_score_tracker">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:text="home"
        android:background="@drawable/button_round_selector"
        android:textColor="#ffffff"
        android:onClick="homeButtonClicked"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/blank_view"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:id="@+id/view2"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <ListView
        android:layout_width="0dp"
        android:id="@+id/listView"
        app:layout_constraintLeft_toLeftOf="@+id/view2"
        app:layout_constraintRight_toRightOf="@+id/view2"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_bias="0.66"
        app:layout_constraintTop_toTopOf="@+id/view2"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp" />

</android.support.constraint.ConstraintLayout>
