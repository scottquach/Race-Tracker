<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.scottquach.racetracker.StartMenu"
    android:background="@drawable/background_gradient">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Race Tracker"
        android:textColor="#880E4F"
        android:gravity="center"
        android:id="@+id/textView"
        android:textSize="40sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <Button
        android:layout_height="wrap_content"
        android:text="@string/ButtonNewRaceText"
        android:id="@+id/button"
        android:background="@drawable/button_round_selector"
        android:onClick="newMeetButtonClicked"
        android:textColor="#ffffff"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_width="150dp" />


    <Button
        android:layout_height="wrap_content"
        android:text="@string/ButtonLoadTeamText"
        android:id="@+id/button2"
        android:background="@drawable/button_round_selector"
        android:onClick="loadTeam"
        android:textColor="#ffffff"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_width="150dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:layout_height="wrap_content"
        android:text="@string/ButtonViewScoresText"
        android:id="@+id/button7"
        android:background="@drawable/button_round_selector"
        android:textColor="#ffffff"
        android:onClick="viewScoresButtonClicked"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_width="150dp" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/ButtonSettingsText"
        android:textColor="#ffffff"
        android:id="@+id/button4"
        android:background="@drawable/button_round_selector"
        android:onClick="settingsButtonClicked"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/button7"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/button7" />


</android.support.constraint.ConstraintLayout>
